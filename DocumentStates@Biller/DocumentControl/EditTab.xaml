<TabItem x:Class="DocumentStates_Biller.DocumentControl.EditTab"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
         xmlns:controls="clr-namespace:Biller.Controls;assembly=Biller.Controls"
         xmlns:local="clr-namespace:DocumentStates_Biller.DocumentControl"
         mc:Ignorable="d" 
         MaxWidth="300" MinHeight="72" Style="{DynamicResource InnerBackstageTabCotrolItem}"
         d:DesignHeight="300" d:DesignWidth="300">
    <TabItem.Header>
        <Grid>
            <Grid Width="48" Margin="10,0,0,0" HorizontalAlignment="Left">
                <Image Source="../Images/appbar.cabinet.files.variant.png"/>
            </Grid>
            <Grid Margin="68,0,0,0">
                <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="0,0,0,5">
                    <TextBlock Text="Dokumentstatus"/>
                    <TextBlock Text="Fügen Sie dem Dokument einen Status hinzu" Foreground="DimGray" TextWrapping="Wrap" />
                </StackPanel>
            </Grid>
        </Grid>
    </TabItem.Header>
    <controls:AnimatedScrollViewer>
        <local:TabContent/>
    </controls:AnimatedScrollViewer>
</TabItem>
